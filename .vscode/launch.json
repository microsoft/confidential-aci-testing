{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "env_create",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.env_create",
            "args": [
                "${input:envPath}",
            ]
        },
        {
            "name": "infra_deploy",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.infra_deploy",
            "args": [
                "--subscription",
                "${input:subscription}",
                "--resource-group",
                "${input:resource-group}",
                "--registry",
                "${input:registry}",
                "--managed-identity",
                "${input:managed-identity}",
                "--location",
                "${input:location}",
            ]
        },
        {
            "name": "target_run",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.target_run",
            "args": [
                "${input:target}",
                "--name",
                "${input:deploymentName}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "images_build",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_build",
            "args": [
                "${input:target}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "images_push",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_push",
            "args": [
                "${input:target}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "policies_gen",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.policies_gen",
            "args": [
                "${input:target}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "aci_deploy",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_deploy",
            "args": [
                "${input:target}",
                "-n",
                "${input:deploymentName}",
            ]
        },
        {
            "name": "aci_monitor",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_monitor",
            "args": [
                "-n",
                "${input:deploymentName}",
            ]
        },
        {
            "name": "aci_remove",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_remove",
            "args": [
                "-n",
                "${input:deploymentName}",
            ]
        },
    ],
    "inputs": [
        {
            "id": "target",
            "type": "pickString",
            "description": "Enter the name of the target:",
            "options": [
                "test/example",
            ],
        },
        {
            "id": "envPath",
            "type": "promptString",
            "description": "Enter the path to save the environment file:",
            "default": ".env",
        },
        {
            "id": "registry",
            "type": "promptString",
            "description": "Enter the name of the registry:",
        },
        {
            "id": "repository",
            "type": "promptString",
            "description": "Enter the repository to use:",
            "default": "example",
        },
        {
            "id": "tag",
            "type": "promptString",
            "description": "Enter the tag to use:",
            "default": "latest",
        },
        {
            "id": "deploymentName",
            "type": "promptString",
            "description": "Enter the name for the deployment:",
        },
        {
            "id": "subscription",
            "type": "promptString",
            "description": "Enter the ID of the Azure Subscription:",
        },
        {
            "id": "resource-group",
            "type": "promptString",
            "description": "Enter the name of the Resource Group:",
        },
        {
            "id": "managed-identity",
            "type": "promptString",
            "description": "Enter the name for the managed identity:",
        },
        {
            "id": "location",
            "type": "promptString",
            "description": "Enter the location:",
            "default": "northeurope"
        },
    ]
}