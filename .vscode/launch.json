{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "env_create",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.env_create",
            "args": [
                "${input:envPath}"
            ]
        },
        {
            "name": "infra_deploy",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.infra_deploy",
            "envFile": "${workspaceFolder}/${input:envPath}"
        },
        {
            "name": "target_create",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.target_create",
            "args": [
                "${input:targetPath}",
                "--name",
                "${input:targetName}"
            ]
        },
        {
            "name": "target_run",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.target_run",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "${input:targetPath}",
                "--name",
                "${input:deploymentName}"
            ]
        },
        {
            "name": "images_build",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_build",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "${input:targetPath}"
            ]
        },
        {
            "name": "images_push",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_push",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "${input:targetPath}"
            ]
        },
        {
            "name": "policies_gen",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.policies_gen",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "${input:targetPath}"
            ]
        },
        {
            "name": "aci_deploy",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_deploy",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "${input:targetPath}",
                "-n",
                "${input:deploymentName}"
            ]
        },
        {
            "name": "aci_monitor",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_monitor",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "-n",
                "${input:deploymentName}"
            ]
        },
        {
            "name": "aci_remove",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_remove",
            "envFile": "${workspaceFolder}/${input:envPath}",
            "args": [
                "-n",
                "${input:deploymentName}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "envPath",
            "type": "promptString",
            "description": "Enter the path to save the environment file:",
            "default": ".env"
        },
        {
            "id": "targetPath",
            "type": "promptString",
            "description": "Enter the name of the target:"
        },
        {
            "id": "targetName",
            "type": "promptString",
            "description": "Enter the name of the target:"
        },
        {
            "id": "deploymentName",
            "type": "promptString",
            "description": "Enter the name of the target:"
        }
    ]
}