{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "infra_deploy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/infra_deploy.py",
            "args": [
                "--subscription",
                "${input:subscription}",
                "--resource-group",
                "${input:resource-group}",
                "--registry",
                "${input:registry}",
                "--managed-identity",
                "${input:managed-identity}",
                "--location",
                "${input:location}",
            ]
        },
        {
            "name": "end_to_end",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/end_to_end.py",
            "args": [
                "${input:target}",
            ]
        },
        {
            "name": "images_build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/images_build.py",
            "args": [
                "${input:target}",
                "--repository",
                "${input:repository}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "images_push",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/images_push.py",
            "args": [
                "${input:target}",
                "--repository",
                "${input:repository}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "policies_gen",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/policies_gen.py",
            "args": [
                "${input:target}",
                "--repository",
                "${input:repository}",
                "--tag",
                "${input:tag}",
            ]
        },
        {
            "name": "aci_deploy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/aci_deploy.py",
            "args": [
                "${input:target}",
                "-n",
                "${input:deploymentName}",
            ]
        },
        {
            "name": "aci_monitor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/aci_monitor.py",
            "args": [
                "-n",
                "${input:deploymentName}",
            ]
        },
        {
            "name": "aci_remove",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/aci_remove.py",
            "args": [
                "-n",
                "${input:deploymentName}",
            ]
        },
    ],
    "inputs": [
        {
            "id": "target",
            "type": "pickString",
            "description": "Enter the name of the target:",
            "options": [
                "test/example",
            ],
        },
        {
            "id": "registry",
            "type": "promptString",
            "description": "Enter the name of the registry:",
        },
        {
            "id": "repository",
            "type": "promptString",
            "description": "Enter the repository to use:",
            "default": "example",
        },
        {
            "id": "tag",
            "type": "promptString",
            "description": "Enter the tag to use:",
            "default": "latest",
        },
        {
            "id": "deploymentName",
            "type": "promptString",
            "description": "Enter the name for the deployment:",
        },
        {
            "id": "subscription",
            "type": "promptString",
            "description": "Enter the ID of the Azure Subscription:",
        },
        {
            "id": "resource-group",
            "type": "promptString",
            "description": "Enter the name of the Resource Group:",
        },
        {
            "id": "managed-identity",
            "type": "promptString",
            "description": "Enter the name for the managed identity:",
        },
        {
            "id": "location",
            "type": "promptString",
            "description": "Enter the location:",
            "default": "northeurope"
        },
    ]
}